<odoo>
    <!-- List View -->
    <record id="view_company_management_goods_tax_type_list" model="ir.ui.view">
        <field name="name">company.management.goods.tax.type.list</field>
        <field name="model">company.management.goods.tax.type</field>
        <field name="arch" type="xml">
            <list string="Jenis Pajak Barang">
                <field name="name"/>
                <field name="is_fully_tax_exempt"/>
                <field name="is_default"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_company_management_goods_tax_type_form" model="ir.ui.view">
        <field name="name">company.management.goods.tax.type.form</field>
        <field name="model">company.management.goods.tax.type</field>
        <field name="arch" type="xml">
            <form string="Jenis Pajak Barang">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="is_fully_tax_exempt" string="Bebas Pajak Penuh"/>
                        <field name="is_default" string="Default"/>
                    </group>
                    <div class="text-center mt-4 mb-2">
                        <strong>Pilih pajak yang dibebaskan untuk tipe pajak ini.</strong>
                    </div>
                    <field name="line_ids">
                        <list editable="bottom">
                            <field name="tax_item_id"/>
                            <field name="tax_rate" widget="percentage"/>
                            <field name="is_exempt" widget="boolean_toggle"/>
                        </list>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_company_management_goods_tax_type" model="ir.actions.act_window">
        <field name="name">Jenis Pajak Barang</field>
        <field name="res_model">company.management.goods.tax.type</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Goods Tax Type
            </p>
        </field>
    </record>
</odoo>
