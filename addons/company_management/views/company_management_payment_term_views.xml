<odoo>
    <!-- List View -->
    <record id="view_company_management_payment_term_list" model="ir.ui.view">
        <field name="name">company.management.payment.term.list</field>
        <field name="model">company.management.payment.term</field>
        <field name="arch" type="xml">
            <list string="Termin Pembayaran">
                <field name="name"/>
                <field name="payment_type" string="Jenis"/>
                <field name="days_display"/>
                <field name="active" widget="boolean_toggle" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_company_management_payment_term_form" model="ir.ui.view">
        <field name="name">company.management.payment.term.form</field>
        <field name="model">company.management.payment.term</field>
        <field name="arch" type="xml">
            <form string="Termin Pembayaran">
                <sheet>
                    <group>
                        <group>
                            <field name="active" invisible="1"/>
                            <field name="name" string="Keterangan Termin"/>
                            <field name="payment_type" string="Jenis Pembayaran"/>
                            <field name="days" string="Hari (atau hari ke- pada bulan berikutnya)" invisible="payment_type in ['cash', 'prepayment']"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_company_management_payment_term" model="ir.actions.act_window">
        <field name="name">Termin Pembayaran</field>
        <field name="res_model">company.management.payment.term</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Payment Term
            </p>
        </field>
    </record>
</odoo>
