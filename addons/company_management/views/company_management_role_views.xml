<odoo>
    <!-- Tree View -->
    <record id="view_company_management_role_tree" model="ir.ui.view">
        <field name="name">company.management.role.tree</field>
        <field name="model">company.management.role</field>
        <field name="arch" type="xml">
            <list string="User Roles">
                <field name="name"/>
                <field name="description"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_company_management_role_form" model="ir.ui.view">
        <field name="name">company.management.role.form</field>
        <field name="model">company.management.role</field>
        <field name="arch" type="xml">
            <form string="Pengaturan Akses">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Nama Peran"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="description"/>
                            <field name="active"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Hak Akses">
                            <style>
                                .role-table {
                                    width: 100%;
                                    border-collapse: collapse;
                                    margin-top: 20px;
                                }
                                .role-header {
                                    background-color: #2e5f9b;
                                    color: white;
                                    padding: 10px;
                                    font-weight: bold;
                                    display: flex;
                                    justify-content: space-between;
                                    align-items: center;
                                }
                                .role-row {
                                    background-color: #f0f4f8;
                                    padding: 8px 20px;
                                    border-bottom: 1px solid #dee2e6;
                                }
                                .role-row:nth-child(even) {
                                    background-color: #e9ecef;
                                }
                            </style>
                            <div class="role-table">
                                <!-- Setup Perusahaan -->
                                <div class="role-header">
                                    <span>Setup Perusahaan:</span>
                                    <field name="perm_group_setup_company" nolabel="1"/>
                                </div>

                                <!-- Pengaturan Khusus -->
                                <div class="role-header">
                                    <span>Pengaturan Khusus:</span>
                                    <field name="perm_group_special_settings" nolabel="1"/>
                                </div>

                                <!-- Konfigurasi Penjualan -->
                                <div class="role-header">
                                    <span>Konfigurasi Penjualan:</span>
                                    <field name="perm_group_sales_config" nolabel="1"/>
                                </div>

                                <!-- Transaksi Penjualan -->
                                <div class="role-header">
                                    <span>Transaksi Penjualan:</span>
                                    <field name="perm_group_sales_trans" nolabel="1"/>
                                </div>

                                <!-- Laporan terkait penjualan -->
                                <div class="role-header">
                                    <span>Laporan terkait penjualan:</span>
                                    <field name="perm_group_sales_reports" nolabel="1"/>
                                </div>

                                <!-- Konfigurasi Pembelian -->
                                <div class="role-header">
                                    <span>Konfigurasi Pembelian:</span>
                                    <field name="perm_group_purchase_config" nolabel="1"/>
                                </div>
                                <div class="role-row">
                                    <div class="d-flex justify-content-between">
                                        <span>Perubahan harga beli</span>
                                        <field name="perm_purchase_price_change" nolabel="1"/>
                                    </div>
                                </div>

                                <!-- Transaksi Pembelian -->
                                <div class="role-header">
                                    <span>Transaksi Pembelian:</span>
                                    <field name="perm_group_purchase_trans" nolabel="1"/>
                                </div>
                                <div class="role-row">
                                    <div class="d-flex justify-content-between">
                                        <span>Menampilkan transaksi Supplier</span>
                                        <field name="perm_view_supplier_trans" nolabel="1"/>
                                    </div>
                                </div>
                                <div class="role-row">
                                    <div class="d-flex justify-content-between">
                                        <span>Perubahan Supplier</span>
                                        <field name="perm_change_supplier" nolabel="1"/>
                                    </div>
                                </div>
                                <div class="role-row">
                                    <div class="d-flex justify-content-between">
                                        <span>Input Pembelian</span>
                                        <field name="perm_input_purchase" nolabel="1"/>
                                    </div>
                                </div>

                                <!-- Analisis Pembelian -->
                                <div class="role-header">
                                    <span>Analisis Pembelian:</span>
                                    <field name="perm_group_purchase_analysis" nolabel="1"/>
                                </div>

                                <!-- Konfigurasi Inventaris -->
                                <div class="role-header">
                                    <span>Konfigurasi Inventaris:</span>
                                    <field name="perm_group_inventory_config" nolabel="1"/>
                                </div>

                                <!-- Kegiatan Inventaris -->
                                <div class="role-header">
                                    <span>Kegiatan Inventaris:</span>
                                    <field name="perm_group_inventory_activity" nolabel="1"/>
                                </div>

                                <!-- Analisis Inventaris -->
                                <div class="role-header">
                                    <span>Analisis Inventaris:</span>
                                    <field name="perm_group_inventory_analysis" nolabel="1"/>
                                </div>

                                <!-- Konfigurasi Bank dan Akun GL -->
                                <div class="role-header">
                                    <span>Konfigurasi Bank dan Akun GL:</span>
                                    <field name="perm_group_bank_gl_config" nolabel="1"/>
                                </div>

                                <!-- Transaksi Bank dan Akun GL -->
                                <div class="role-header">
                                    <span>Transaksi Bank dan Akun GL:</span>
                                    <field name="perm_group_bank_gl_trans" nolabel="1"/>
                                </div>

                                <!-- Analisis Bank dan Akun GL -->
                                <div class="role-header">
                                    <span>Analisis Bank dan Akun GL:</span>
                                    <field name="perm_group_bank_gl_analysis" nolabel="1"/>
                                </div>

                                <!-- Dashboard -->
                                <div class="role-header">
                                    <span>Dashboard:</span>
                                    <field name="perm_group_dashboard" nolabel="1"/>
                                </div>
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_company_management_role" model="ir.actions.act_window">
        <field name="name">Level pengguna</field>
        <field name="res_model">company.management.role</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new User Role
            </p>
        </field>
    </record>
</odoo>
