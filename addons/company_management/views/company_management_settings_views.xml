<!-- addons/company_management/views/company_management_settings_views.xml -->
<odoo>
    <!-- Form view -->
    <record id="view_company_management_settings_form" model="ir.ui.view">
        <field name="name">company.management.settings.form</field>
        <field name="model">company.management.settings</field>
        <field name="arch" type="xml">
            <form string="Atur Perusahaan">
                <sheet>
                    <div class="o_form_sheet_bg">
                        <div class="row">
                            <!-- Left Column: Pengaturan Umum -->
                            <div class="col-6">
                                <group string="Pengaturan umum">
                                    <field name="report_name"/>
                                    <field name="address"/>
                                    <field name="domicile"/>
                                    <field name="phone"/>
                                    <field name="fax"/>
                                    <field name="email"/>
                                    <field name="bcc_email"/>
                                    <field name="company_reg_no"/>
                                    <field name="npwp"/>
                                    <field name="currency_id"/>
                                    <field name="logo" widget="image" class="oe_avatar"/>
                                    <field name="new_logo" filename="new_logo_filename"/>
                                    <field name="delete_logo"/>
                                    <field name="auto_revalue_currency"/>
                                    <field name="report_timezone"/>
                                    <field name="db_scheme_version"/>
                                </group>
                            </div>

                            <!-- Right Column: Other Settings -->
                            <div class="col-6">
                                <group string="Laporan Buku Besar (GL)">
                                    <label for="fiscal_year_start" string="Tahun Fiskal"/>
                                    <div class="o_row">
                                        <field name="fiscal_year_start" class="oe_inline"/> - 
                                        <field name="fiscal_year_end" class="oe_inline"/>
                                    </div>
                                    <label for="tax_period_months" string="Periode Pajak"/>
                                    <div class="o_row">
                                        <field name="tax_period_months" class="oe_inline"/> Bulan
                                    </div>
                                    <label for="tax_period_offset_months" string="Periode Akhir Pajak"/>
                                    <div class="o_row">
                                        <field name="tax_period_offset_months" class="oe_inline"/> Bulan kebelakang
                                    </div>
                                    <field name="put_alternative_tax_include"/>
                                    <field name="suppress_tax_rates"/>
                                </group>

                                <group string="Harga Jual">
                                    <field name="price_basis"/>
                                    <label for="extra_price_percent" string="Tambah Harga dari Biaya Standar"/>
                                    <div class="o_row">
                                        <field name="extra_price_percent" class="oe_inline"/> %
                                    </div>
                                    <label for="round_to_nearest" string="Round calculated prices to nearest"/>
                                    <div class="o_row">
                                        <field name="round_to_nearest" class="oe_inline"/> Sen
                                    </div>
                                </group>

                                <group string="Optional Modules">
                                    <field name="enable_manufacturing"/>
                                    <field name="enable_fixed_assets"/>
                                    <field name="use_dimensions"/>
                                </group>

                                <group string="User Interface Options">
                                    <field name="product_search_enabled" string="Pencarian Daftar Produk &amp; Inventaris"/>
                                    <field name="customer_search_enabled" string="Pencarian Daftar Customer"/>
                                    <field name="supplier_search_enabled" string="Pencarian Daftar Supplier"/>
                                    <label for="login_timeout_seconds" string="Batas waktu Login"/>
                                    <div class="o_row">
                                        <field name="login_timeout_seconds" class="oe_inline"/> detik
                                    </div>
                                </group>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <!-- Action -->
    <record id="action_company_management_settings" model="ir.actions.server">
        <field name="name">Company Settings</field>
        <field name="model_id" ref="model_company_management_settings"/>
        <field name="state">code</field>
        <field name="code">action = model.action_open_settings()</field>
    </record>


    <!-- Placeholder Action for Not Implemented Menus -->
    <record id="action_not_implemented" model="ir.actions.server">
        <field name="name">Not Implemented</field>
        <field name="model_id" ref="model_company_management_settings"/>
        <field name="state">code</field>
        <field name="code">
            raise UserError("This feature is not yet implemented.")
        </field>
    </record>

    <!-- Menus -->
    <menuitem
        id="menu_company_management_root"
        name="Management"
        sequence="60"
    />

    <!-- 1. Atur Perusahaan -->
    <menuitem
        id="menu_atur_perusahaan"
        name="Atur Perusahaan"
        parent="menu_company_management_root"
        sequence="10"
    />

    <menuitem
        id="menu_pengaturan_perusahaan"
        name="Pengaturan perusahaan"
        parent="menu_atur_perusahaan"
        action="action_company_management_settings"
        sequence="10"
    />
    <menuitem
        id="menu_akun_pengguna"
        name="Akun Pengguna"
        parent="menu_atur_perusahaan"
        action="action_company_management_user"
        sequence="20"
    />
    <menuitem
        id="menu_level_pengguna"
        name="Level pengguna"
        parent="menu_atur_perusahaan"
        action="action_company_management_role"
        sequence="30"
    />
    <menuitem
        id="menu_referensi_transaksi"
        name="Referensi transaksi"
        parent="menu_atur_perusahaan"
        action="action_company_management_transaction_reference"
        sequence="40"
    />
    <menuitem
        id="menu_item_pajak"
        name="Item pajak"
        parent="menu_atur_perusahaan"
        action="action_not_implemented"
        sequence="50"
    />
    <menuitem
        id="menu_group_pajak"
        name="Group pajak"
        parent="menu_atur_perusahaan"
        action="action_not_implemented"
        sequence="60"
    />
    <menuitem
        id="menu_jenis_pajak_barang"
        name="Jenis Pajak Barang"
        parent="menu_atur_perusahaan"
        action="action_not_implemented"
        sequence="70"
    />
    <menuitem
        id="menu_tahun_fiskal"
        name="Tahun Fiskal"
        parent="menu_atur_perusahaan"
        action="action_not_implemented"
        sequence="80"
    />

    <!-- 2. Lain-lain -->
    <menuitem
        id="menu_lain_lain"
        name="Lain-lain"
        parent="menu_company_management_root"
        sequence="20"
    />
    <menuitem
        id="menu_termin_pembayaran"
        name="Termin pembayaran"
        parent="menu_lain_lain"
        action="action_not_implemented"
        sequence="10"
    />
    <menuitem
        id="menu_perusahaan_pengiriman"
        name="Perusahaan pengiriman"
        parent="menu_lain_lain"
        action="action_not_implemented"
        sequence="20"
    />
    <menuitem
        id="menu_point_of_sale"
        name="Point of sale"
        parent="menu_lain_lain"
        action="action_not_implemented"
        sequence="30"
    />
    <menuitem
        id="menu_kategori_kontak"
        name="Kategori kontak"
        parent="menu_lain_lain"
        action="action_not_implemented"
        sequence="40"
    />

    <!-- 3. Pengaturan -->
    <menuitem
        id="menu_pengaturan_root"
        name="Pengaturan"
        parent="menu_company_management_root"
        sequence="30"
    />
    <menuitem
        id="menu_void_transaksi"
        name="Void transaksi"
        parent="menu_pengaturan_root"
        action="action_not_implemented"
        sequence="10"
    />
    <menuitem
        id="menu_backup_database"
        name="Backup database"
        parent="menu_pengaturan_root"
        action="action_not_implemented"
        sequence="20"
    />
</odoo>
