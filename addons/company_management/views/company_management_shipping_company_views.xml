<odoo>
    <!-- List View -->
    <record id="view_company_management_shipping_company_list" model="ir.ui.view">
        <field name="name">company.management.shipping.company.list</field>
        <field name="model">company.management.shipping.company</field>
        <field name="arch" type="xml">
            <list string="Perusahaan Pengiriman" editable="bottom">
                <field name="name"/>
                <field name="contact"/>
                <field name="phone"/>
                <field name="phone2"/>
                <field name="address"/>
                <field name="active" widget="boolean_toggle" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_company_management_shipping_company_form" model="ir.ui.view">
        <field name="name">company.management.shipping.company.form</field>
        <field name="model">company.management.shipping.company</field>
        <field name="arch" type="xml">
            <form string="Perusahaan Pengiriman">
                <sheet>
                    <group>
                        <group>
                            <field name="active" invisible="1"/>
                            <field name="name"/>
                            <field name="contact"/>
                            <field name="phone"/>
                            <field name="phone2"/>
                            <field name="address"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_company_management_shipping_company" model="ir.actions.act_window">
        <field name="name">Perusahaan Pengiriman</field>
        <field name="res_model">company.management.shipping.company</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Shipping Company
            </p>
        </field>
    </record>
</odoo>
