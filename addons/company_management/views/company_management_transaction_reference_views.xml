<odoo>
    <!-- List View -->
    <record id="view_company_management_transaction_reference_list" model="ir.ui.view">
        <field name="name">company.management.transaction.reference.list</field>
        <field name="model">company.management.transaction.reference</field>
        <field name="arch" type="xml">
            <list string="Referensi Transaksi" editable="bottom">
                <field name="name"/>
                <field name="prefix"/>
                <field name="pattern"/>
                <field name="is_standard" widget="boolean_toggle"/>
                <field name="memo"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_company_management_transaction_reference_form" model="ir.ui.view">
        <field name="name">company.management.transaction.reference.form</field>
        <field name="model">company.management.transaction.reference</field>
        <field name="arch" type="xml">
            <form string="Referensi Transaksi">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="prefix"/>
                            <field name="pattern"/>
                        </group>
                        <group>
                            <field name="is_standard"/>
                            <field name="memo"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_company_management_transaction_reference" model="ir.actions.act_window">
        <field name="name">Referensi Transaksi</field>
        <field name="res_model">company.management.transaction.reference</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Transaction Reference
            </p>
        </field>
    </record>
</odoo>
